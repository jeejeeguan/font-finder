{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "font-finder",
  "title": "Font Finder",
  "description": "Search local macOS fonts, preview via Quick Look, and copy font names",
  "version": "0.1.0",
  "icon": "icon.png",
  "author": "jeejeeguan",
  "license": "MIT",
  "categories": ["Design Tools"],
  "keywords": [
    "fonts",
    "font",
    "typeface",
    "typography",
    "font book",
    "search",
    "preview",
    "quick look",
    "copy"
  ],
  "commands": [
    {
      "name": "search-fonts",
      "title": "Search Fonts",
      "description": "Search local fonts and copy font names",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.4",
    "@raycast/utils": "^1.17.0",
    "fontkit": "^2.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
